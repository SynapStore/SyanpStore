# Dockerfile-tauri

FROM debian:bullseye-slim

# ðŸ§° Install system dependencies
RUN apt-get update && apt-get install -y \
    curl wget gnupg git libssl-dev libwebkit2gtk-4.0-dev \
    build-essential libgtk-3-dev libayatana-appindicator3-dev \
    librsvg2-dev ca-certificates && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# ðŸ¦€ Install Rust
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# ðŸ“¦ Install Node.js + npm
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs

# ðŸ“¦ Install Tauri CLI
RUN npm install -g @tauri-apps/cli

# Set working directory
WORKDIR /app

# Copy everything into the container
COPY . .

# Install Node deps
WORKDIR /app/apps/desktop
RUN npm install

# Build the Tauri app
CMD ["npm", "run", "tauri", "build"]
